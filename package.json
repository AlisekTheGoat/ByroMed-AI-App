{
  "name": "byromed-ai-app",
  "version": "1.0.0",
  "description": "ByroMed AI â€” single-window single-agent Electron app",
  "main": "dist/electron/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "vite": "vite",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "watch:main": "tsc -w -p electron/tsconfig.json",
    "watch:preload": "tsc -w -p electron/tsconfig.preload.json",
    "watch:electron": "concurrently -k \"npm:watch:main\" \"npm:watch:preload\"",
    "dev": "concurrently -k \"npm:vite\" \"npm:watch:electron\" \"sh -c 'wait-on http://localhost:5173 dist/electron/main.js && npm run electron'\"",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json",
    "build": "npm run clean && npm run build:renderer && npm run build:electron && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlisekTheGoat/ByroMed-AI-App.git"
  },
  "bugs": {
    "url": "https://github.com/AlisekTheGoat/ByroMed-AI-App/issues"
  },
  "homepage": "https://github.com/AlisekTheGoat/ByroMed-AI-App#readme",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.17.1",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.8",
    "postcss": "^8.4.41",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  },
  "build": {
    "files": [
      "dist/renderer/**",
      "dist/electron/*.js",
      "package.json",
      "agent/**",
      "!**/*.ts",
      "!**/*.map",
      "!**/.DS_Store"
    ],
    "asarUnpack": [
      "agent/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
